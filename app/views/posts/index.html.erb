  <body>



      <div class="section-option">

        <div class="row">
          <div class="col s12 center">
            <h3><i class="mdi-content-send "></i></h3>
            <h4 class="grey-text text-darken-3"><%=@bulletin_name%></h4>
            <p class="left-align light grey-text text-darken-1 " style="text-align:center">자신에게 맞는 친구를 찾아보거나 프로필을 등록하세요</p>
            <a href="" id="download-button" class="writing btn-large waves-effect waves-light teal lighten-1">등록</a>
          </div>
        </div>

      </div>
      <div class="divider" style=""></div>


    <!-- 화면왼쪽 -->
  <!-- <div style="float:left; width:60% "> -->
    <div class="box-scroll">
      <div class="sector-option">
        <label>흡연</label>
        <form action="#">
          <input type="checkbox" id="yes" />
          <label for="yes"> 예 </label>
          <input type="checkbox" id="no" />
          <label for="no"> 아니오</label>
        </form>
      </div>
      <div class="sector-option">
        <div>라이프 스타일</div>
      </div>
      <div class="sector-option">
        <div>가격</div>
      </div>

     <div class="row">

        <div class='field'>

        <% @posts.each do |p| %>
        <div class=" col s12 m6 <%= p.post_smoke %>">
          <div class="card">
                <div class="card-image">
                  <img src=<%=asset_path("roommate2.jpeg")%>>
                  <span class="card-title"><%= p.post_personname%></span>
                </div>
                <div class="card-content">
                  <span class="teal-text text-lighten-2"><%= p.post_smoke %></style>
                </div>
                <div class="card-action">
                  <a href="/conversations/new" id="download-button" class="btn waves-effect waves-light teal lighten-1">메세지</a>
                  <%= link_to "메세지", new_conversation_path(receiver: p.post_personname)%>
                  <%= link_to '수정', edit_bulletin_post_path(p.bulletin, p), class:'btn btn-default' %>
                  <%= link_to '삭제', [p.bulletin, p], method: :delete, class:'btn btn-default' %>
                </div>
          </div>
        </div>
        <% end%>
      </div>
     </div>
   </div>
